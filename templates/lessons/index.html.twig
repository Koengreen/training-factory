{% extends 'base.html.twig' %}

{% block title %}Lessenoverzicht{% endblock %}

{% block body %}
    <h1>Lessenoverzicht</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naam</th>
                <th>Tijd</th>
                <th>Enddate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lesson in lessons %}
            <tr>
                <td>{{ lesson.id }}</td>
                <td>{{ lesson.naam }}</td>
                <td>{{ lesson.tijd ? lesson.tijd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ lesson.enddate ? lesson.enddate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_lessons_show', {'id': lesson.id}) }}">show</a>
                    <a href="{{ path('app_lessons_edit', {'id': lesson.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lessons_new') }}">Nieuwe toevoegen</a>
{% endblock %}
